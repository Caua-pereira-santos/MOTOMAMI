@model MOTOMAMI.Models.Musica

@{
    ViewData["Title"] = "Cadastrar música";
}

<h1>@ViewData["Title"]</h1>

<div>
    
    <form asp-controller="Musica" asp-action="Salvar" method="post">
        <label for="id">Id: </label>
            <input type="number" name="id" id="id" class="form-control" min="1" required>

        <label for="nome">Nome: </label>
        <input type="text" name="nome" id="nome" class="form-control" required>

        <label for="duracao">Duração(min): </label>
        <input type="number" name="duracao" id="duracao" class="form-control" min="1" required>

        <br/><button type="submit">Salvar</button>
    </form>
    
</div>