@model MOTOMAMI.Models.Album

@{
    ViewData["Title"] = "Cadastrar álbum";
}

<h1>@ViewData["Title"]</h1>

<div>
    
    <form asp-controller="Album" asp-action="Salvar" method="post">
        <label for="id">Id: </label>
            <input type="number" name="id" id="id" class="form-control" min="1" required>

        <label for="nome">Nome: </label>
        <input type="text" name="nome" id="nome" class="form-control" required>

        <label for="qtdeMusicas">Quantidade de Músicas: </label>
        <input type="number" name="qtdeMusicas" id="qtdeMusicas" class="form-control" min="1" required>

        <br/><button type="submit">Salvar</button>
    </form>
    
</div>