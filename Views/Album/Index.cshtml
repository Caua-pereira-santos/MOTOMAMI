@model IEnumerable<MOTOMAMI.Models.Album>

@{
    ViewData["Title"] = "Álbuns";
}
<h1>@ViewData["Title"]</h1><br/>

<a asp-controller="Album" asp-action="Cadastro">
    Cadastrar Álbum
</a><br/><br/>

@if(Model.Count() == 0)
{
    <p>Nenhum álbum cadastrado</p>
}else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Quantidade de músicas</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var album in Model)
            {
                <tr>
                    <td>@album.Id</td>
                    <td>@album.Nome</td>
                    <td>@album.QtdeMusicas</td>
                    <td>
                        
                        <a asp-controller="Album" asp-action="Detalhes" asp-route-id="@album.Id">
                            Ver detalhes
                         </a><br/><br/>

                         <a asp-controller="Album" asp-action="Editar" asp-route-id="@album.Id">
                            Editar
                         </a><br/><br/>
                        
                        <a asp-controller="Album" asp-action="Deletar" asp-route-id="@album.Id">
                            Deletar
                         </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
 }