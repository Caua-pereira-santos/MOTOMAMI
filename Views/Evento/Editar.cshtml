@model MOTOMAMI.Models.Evento

@{
    ViewData["Title"] = $"Evento: {Model.Nome}";
}
<h1>@ViewData["Title"]</h1>

<div>

<form asp-controller="Evento" asp-action="Atualizar" method="post">
    
    <input type="hidden" asp-for="@Model.Id">

    <label for="Nome">Nome</label> <br/>
    <input asp-for="@Model.Nome" value="@Model.Nome" class="form-control"> <br/><br/>
     <!--<span asp-validation-for="Nome" class="text-danger"></span> <br/>-->

    <label for="lugar">Lugar</label> <br/>
    <input asp-for="@Model.Lugar" value="@Model.Lugar" class="form-control"> <br/><br/>
    <!--<span asp-validation-for="Duracao" class="text-danger"></span><br/>-->

    <button class="btn btn-primary btn-sm" type="submit">Enviar</button>

</form>

</div>