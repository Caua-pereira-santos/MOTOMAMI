@model IEnumerable<MOTOMAMI.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
}
<h1>@ViewData["Title"]</h1><br/>

<a asp-controller="Evento" asp-action="Cadastro">
    Cadastrar Evento
</a><br/><br/>

@if(Model.Count() == 0)
{
    <p>Nenhum evento cadastrado</p>
}else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Lugar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var evento in Model)
            {
                <tr>
                    <td>@evento.Id</td>
                    <td>@evento.Nome</td>
                    <td>@evento.Lugar</td>
                    <td>
                        
                        <a asp-controller="Evento" asp-action="Detalhes" asp-route-id="@evento.Id">
                            Ver detalhes
                         </a><br/><br/>

                         <a asp-controller="Evento" asp-action="Editar" asp-route-id="@evento.Id">
                            Editar
                         </a><br/><br/>
                        
                        <a asp-controller="Evento" asp-action="Deletar" asp-route-id="@evento.Id">
                            Deletar
                         </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
 }