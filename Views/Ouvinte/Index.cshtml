@model IEnumerable<MOTOMAMI.Models.Ouvinte>

@{
    ViewData["Title"] = "Ouvintes mensais";
}
<h1>@ViewData["Title"]</h1><br/>

<a asp-controller="Ouvinte" asp-action="Cadastro">
    Cadastrar Ouvinte
</a><br/><br/>

@if(Model.Count() == 0)
{
    <p>Nenhuma ouvinte mensal cadastrado</p>
}else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>MÃºsica Preferida</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var ouvinte in Model)
            {
                <tr>
                    <td>@ouvinte.Id</td>
                    <td>@ouvinte.Nome</td>
                    <td>@ouvinte.Preferencia</td>
                    <td>
                        
                        <a asp-controller="Ouvinte" asp-action="Detalhes" asp-route-id="@ouvinte.Id">
                            Ver detalhes
                         </a><br/><br/>

                         <a asp-controller="Ouvinte" asp-action="Editar" asp-route-id="@ouvinte.Id">
                            Editar
                         </a><br/><br/>
                        
                        <a asp-controller="Ouvinte" asp-action="Deletar" asp-route-id="@ouvinte.Id">
                            Deletar
                         </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
 }