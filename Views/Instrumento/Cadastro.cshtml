@model MOTOMAMI.Models.Instrumento

@{
    ViewData["Title"] = "Cadastrar instrumento";
}

<h1>@ViewData["Title"]</h1>

<div>
    
    <form asp-controller="Instrumento" asp-action="Salvar" method="post">
        <label for="id">Id: </label>
            <input type="number" name="id" id="id" class="form-control" min="1" required>

        <label for="nome">Nome: </label>
        <input type="text" name="nome" id="nome" class="form-control" required>

        <label for="classificacao">Classificação(família): </label>
        <input type="text" name="classificacao" id="classificacao" class="form-control" required>

        <br/><button type="submit">Salvar</button>
    </form>
    
</div>