@model IEnumerable<MOTOMAMI.Models.Instrumento>

@{
    ViewData["Title"] = "Instrumentos";
}
<h1>@ViewData["Title"]</h1><br/>

<a asp-controller="Instrumento" asp-action="Cadastro">
    Cadastrar Instrumento
</a><br/><br/>

@if(Model.Count() == 0)
{
    <p>Nenhum instrumento cadastrado</p>
}else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Classificação</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var instrumento in Model)
            {
                <tr>
                    <td>@instrumento.Id</td>
                    <td>@instrumento.Nome</td>
                    <td>@instrumento.Classificacao</td>
                    <td>
                        
                        <a asp-controller="Instrumento" asp-action="Detalhes" asp-route-id="@instrumento.Id">
                            Ver detalhes
                         </a><br/><br/>

                         <a asp-controller="Instrumento" asp-action="Editar" asp-route-id="@instrumento.Id">
                            Editar
                         </a><br/><br/>
                        
                        <a asp-controller="Instrumento" asp-action="Deletar" asp-route-id="@instrumento.Id">
                            Deletar
                         </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
 }